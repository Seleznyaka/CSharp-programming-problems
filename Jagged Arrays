// Ступенчатые (зубчатые) массивы // Массив массивов
// Jagged Arrays // Матрицы //  Matrix
int[][] array = new int[4][];
array[0] = new int[4] {2,3,4,5};
array[1] = new int[2] {2,2};
array[2] = new int[1] {7};
array[3] = new int[3] {-3,2,5};
for (int i = 0; i < 4; i++)
{
    for (int j = 0; j < array[i].Length; j++)
        Console.Write(array[i][j] + "\t");
    Console.WriteLine();
}
// 1672.Richest Customer Wealth   leetcode.com
